# Environment variables for Docker Compose
# Copy this file to .env and fill in your values

# =============================================================================
# NuGet Configuration (Optional - only needed if you use private NuGet feeds)
# =============================================================================
NUGET_SOURCE=
NUGET_USER_NAME=
PERSONAL_ACCESS_TOKEN=

# =============================================================================
# Database Configuration
# =============================================================================
# Choose: SqlServer or Postgres
DATABASE_PROVIDER=Postgres

# PostgreSQL Connection String (default for Docker Compose)
CONNECTION_STRING=Host=reminders-postgres;Database=Reminders;Username=postgres;Password=YOUR_PASSWORD_HERE;Pooling=true;

# Database Credentials (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_PASSWORD_HERE
POSTGRES_DB=Reminders

# =============================================================================
# Blockchain Configuration
# =============================================================================
# Ganache blockchain node URL
BLOCKCHAIN_NODE_URL=http://reminders-blockchain:8545

# Private key for blockchain transactions (use a test key, never production keys!)
BLOCKCHAIN_PRIVATE_KEY=0xc87509a1c067bbde78beb793e6fa76530b6382a4c0241e5e4a9ec0a0f44dc0d3

# Smart contract address (deploy contract first to get this address)
BLOCKCHAIN_CONTRACT_ADDRESS=0xf204a4Ef082f5c04bB89F7D5E6568B796096735a

# =============================================================================
# API Configuration
# =============================================================================
# CORS Origins - comma separated list of allowed origins
CORS_ORIGINS=http://reminders-react:3000,http://localhost:3000

# ASP.NET Core Environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development
DOTNET_ENVIRONMENT=Development

# API Base URL (used by MVC and React apps)
API_BASE_URL=http://reminders-nginx:9999

# =============================================================================
# Frontend Configuration
# =============================================================================
# Next.js API base URL for React app
NEXT_PUBLIC_API_BASE_URL=http://localhost:9999