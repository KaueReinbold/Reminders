{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dotnet launch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/Web/${input:project}/bin/Debug/net8.0/${input:project}.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Web/${input:project}",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/src/Web/${input:project}/Views"
      }
    },
    {
      "name": "Docker API",
      "type": "docker",
      "request": "attach",
      "containerName": "reminders-api",
      "netCore": {
        "appProject": "${workspaceFolder}/src/Web/Reminder.Api/Reminder.Api.csproj"
      }
    },
    {
      "name": "Docker MVC",
      "type": "docker",
      "request": "attach",
      "containerName": "reminders-mvc",
      "netCore": {
        "appProject": "${workspaceFolder}/src/Web/Reminder.Mvc/Reminder.Mvc.csproj"
      }
    }
  ],
  "inputs": [
    {
      "id": "project",
      "type": "pickString",
      "options": ["Reminders.Mvc", "Reminders.Api"],
      "default": "Reminders.Mvc",
      "description": "Project to execute"
    }
  ]
}