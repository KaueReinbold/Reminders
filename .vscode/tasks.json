{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dotnet: ef migrations add",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "migrations",
        "add",
        "${input:migration_name}",
        "--project",
        "${workspaceFolder}/src/server/data/dotnet/Reminders.Infrastructure.Data.EntityFramework.${input:database}",
        "--startup-project",
        "${workspaceFolder}/src/server/api/dotnet/Reminders.Api"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "label": "dotnet: ef migrations remove",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "migrations",
        "remove",
        "--project",
        "${workspaceFolder}/src/server/data/dotnet/Reminders.Infrastructure.Data.EntityFramework.${input:database}",
        "--startup-project",
        "${workspaceFolder}/src/server/api/dotnet/Reminders.Api"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "label": "dotnet: ef database update",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "database",
        "update",
        "--project",
        "${workspaceFolder}/src/server/data/dotnet/Reminders.Infrastructure.Data.EntityFramework.${input:database}",
        "--startup-project",
        "${workspaceFolder}/src/server/api/dotnet/Reminders.Api"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "panel": "shared"
      },
      "options": {
        "env": {
          "ASPNETCORE_ENVIRONMENT": "${input:environment}",
          "DOTNET_ENVIRONMENT": "${input:environment}"
        }
      }
    },
    {
      "label": "dotnet: ef migrations script",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "migrations",
        "script",
        "--output",
        "${input:output_script}",
        "--project",
        "${workspaceFolder}/src/server/data/dotnet/Reminders.Infrastructure.Data.EntityFramework.${input:database}",
        "--startup-project",
        "${workspaceFolder}/src/server/api/dotnet/Reminders.Api"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "compose up",
      "command": "docker compose --profile all up --build -d",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": "$msCompile",
    },
    {
      "type": "shell",
      "label": "compose down",
      "command": "docker compose --profile all down",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": "$msCompile",
    },
    {
      "type": "shell",
      "label": "compose up debug",
      "command": "docker compose --profile debug -f docker-compose.yml -f docker-compose.override.yml -f docker-compose.debug.yml up --build -d",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": "$msCompile",
    },
    {
      "type": "shell",
      "label": "compose down debug",
      "command": "docker compose --profile debug -f docker-compose.yml -f docker-compose.override.yml -f docker-compose.debug.yml down",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": "$msCompile",
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "./src",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "./src",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
  ],
  "inputs": [
    {
      "id": "migration_name",
      "type": "promptString",
      "description": "Type here the Migration name"
    },
    {
      "id": "output_script",
      "type": "promptString",
      "description": "Type here the output for migration script"
    },
    {
      "id": "environment",
      "type": "pickString",
      "options": [
        "Docker",
        "Development"
      ],
      "default": "Development",
      "description": "Environment to execute"
    },
    {
      "id": "database",
      "type": "pickString",
      "options": [
        "SqlServer",
        "Postgres"
      ],
      "default": "SqlServer",
      "description": "Database to execute"
    }
  ]
}