{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dotnet: clean",
			"command": "dotnet",
			"type": "process",
			"args": ["clean", "${workspaceFolder}"],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "dotnet: build",
			"command": "dotnet",
			"type": "process",
			"args": ["build", "${workspaceFolder}"],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			},
			"dependsOn": ["dotnet: clean"]
		},
		{
			"label": "dotnet: run",
			"command": "dotnet",
			"type": "process",
			"args": [
				"run",
				"--project",
				"${workspaceFolder}/src/${input:project}",
				"--launch-profile",
				"${input:project}",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "new",
				"clear": true
			}
		},
		{
			"label": "dotnet: publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/src/${input:project}",
				"--output",
				"${input:publish_output}",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "dotnet: watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"--project",
				"${workspaceFolder}/src/${input:project}",
				"run"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "dotnet: restore",
			"command": "dotnet",
			"type": "process",
			"args": ["restore", "${workspaceFolder}/src"],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "dotnet: test",
			"command": "dotnet",
			"type": "process",
			"args": ["test", "${workspaceFolder}"],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},

		{
			"label": "dotnet ef: migrations add - Reminders.Mvc",
			"command": "dotnet",
			"type": "process",
			"args": [
				"ef",
				"migrations",
				"add",
				"${input:miration_name}",
				"--startup-project",
				"${workspaceFolder}/src/Reminders.Mvc",
				"--project",
				"${workspaceFolder}/src/Reminders.Infrastructure.Data.EntityFramework"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "dotnet ef: database update - Reminders.Mvc",
			"command": "dotnet",
			"type": "process",
			"args": [
				"ef",
				"database",
				"update",
				"--startup-project",
				"${workspaceFolder}/src/Reminders.Mvc",
				"--project",
				"${workspaceFolder}/src/Reminders.Infrastructure.Data.EntityFramework"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "dotnet ef: migrations remove - Reminders.Mvc",
			"command": "dotnet",
			"type": "process",
			"args": [
				"ef",
				"migrations",
				"remove",
				"--startup-project",
				"${workspaceFolder}/src/Reminders.Mvc",
				"--project",
				"${workspaceFolder}/src/Reminders.Infrastructure.Data.EntityFramework"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},

		{
			"label": "dotnet user-secrets: init",
			"command": "dotnet",
			"type": "process",
			"args": [
				"user-secrets",
				"init",
				"--project",
				"${workspaceFolder}/src/${input:project}"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "dotnet user-secrets: set",
			"command": "dotnet",
			"type": "process",
			"args": [
				"user-secrets",
				"set",
				"${input:secret_key}",
				"${input:secret_value}",
				"--project",
				"${workspaceFolder}/src/${input:project}"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "dotnet user-secrets: remove",
			"command": "dotnet",
			"type": "process",
			"args": [
				"user-secrets",
				"remove",
				"${input:secret_key}",
				"--project",
				"${workspaceFolder}/src/${input:project}"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			},
			"dependsOn": ["dotnet user-secrets: list - Reminders.Mvc"]
		},
		{
			"label": "dotnet user-secrets: list",
			"command": "dotnet",
			"type": "process",
			"args": [
				"user-secrets",
				"list",
				"--project",
				"${workspaceFolder}/src/${input:project}"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},

		{
			"label": "docker: compose up",
			"command": "docker-compose",
			"type": "process",
			"args": [
				"-f",
				"${workspaceFolder}/${input:docker_compose_file}",
				"up",
				"-d"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "docker: compose build",
			"command": "docker-compose",
			"type": "process",
			"args": [
				"-f",
				"${workspaceFolder}/${input:docker_compose_file}",
				"build"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "docker: compose down",
			"command": "docker-compose",
			"type": "process",
			"args": ["-f", "${workspaceFolder}/${input:docker_compose_file}", "down"],
			"problemMatcher": "$msCompile",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		}
	],
	"inputs": [
		{
			"id": "miration_name",
			"type": "promptString",
			"description": "Type here the name of the Migration"
		},
		{
			"id": "secret_key",
			"type": "promptString",
			"description": "Type here the Key name to store"
		},
		{
			"id": "secret_value",
			"type": "promptString",
			"description": "Type here the Value to store"
		},
		{
			"id": "project",
			"type": "pickString",
			"description": "Select the project to use",
			"default": "Reminders.Mvc",
			"options": ["Reminders.Api", "Reminders.Mvc"]
		},
		{
			"id": "publish_output",
			"type": "promptString",
			"description": "Type the output file"
		},
		{
			"id": "docker_compose_file",
			"type": "pickString",
			"description": "Select the project to use",
			"default": "docker-compose.yml",
			"options": [
				"docker-compose.yml",
				"infrastructure/reminders/docker-compose.yml"
			]
		}
	]
}
