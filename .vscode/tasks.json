{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dotnet: ef migrations add",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "migrations",
        "add",
        "${input:migration_name}",
        "--project",
        "${workspaceFolder}/src/Data/Reminders.Infrastructure.Data.EntityFramework",
        "--startup-project",
        "${workspaceFolder}/src/Web/Reminders.Api"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "label": "dotnet: ef migrations remove",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "migrations",
        "remove",
        "--project",
        "${workspaceFolder}/src/Data/Reminders.Infrastructure.Data.EntityFramework",
        "--startup-project",
        "${workspaceFolder}/src/Web/Reminders.Api"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "label": "dotnet: ef database update",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "database",
        "update",
        "--project",
        "${workspaceFolder}/src/Data/Reminders.Infrastructure.Data.EntityFramework",
        "--startup-project",
        "${workspaceFolder}/src/Web/Reminders.Api"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "panel": "shared"
      },
      "options": {
        "env": {
          "ASPNETCORE_ENVIRONMENT": "${input:environment}",
          "DOTNET_ENVIRONMENT": "${input:environment}"
        }
      }
    },
    {
      "label": "dotnet: ef migrations script",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "migrations",
        "script",
        "--output",
        "${input:output_script}",
        "--project",
        "${workspaceFolder}/src/Data/Reminders.Infrastructure.Data.EntityFramework",
        "--startup-project",
        "${workspaceFolder}/src/Web/Reminders.Api"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "label": "docker: compose up",
      "command": "docker-compose",
      "windows": {
        "command": "docker-compose.exe"
      },
      "type": "process",
      "args": [
        "up",
        "-d"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "focus": true,
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "docker: compose build",
      "command": "docker-compose",
      "windows": {
        "command": "docker-compose.exe"
      },
      "type": "process",
      "args": [
        "build"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "focus": true,
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "docker: compose down",
      "command": "docker-compose",
      "windows": {
        "command": "docker-compose.exe"
      },
      "type": "process",
      "args": [
        "down"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "focus": true,
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "rebuild environment",
      "command": "echo Done!",
      "type": "shell",
      "problemMatcher": "$msCompile",
      "presentation": {
        "focus": true,
        "panel": "dedicated",
        "clear": true
      },
      "dependsOrder": "sequence",
      "dependsOn": [
        "docker: compose down",
        "docker: compose build",
        "docker: compose up",
        "dotnet: ef database update"
      ]
    },
  ],
  "inputs": [
    {
      "id": "migration_name",
      "type": "promptString",
      "description": "Type here the Migration name"
    },
    {
      "id": "output_script",
      "type": "promptString",
      "description": "Type here the output for migration script"
    },
    {
      "id": "environment",
      "type": "pickString",
      "options": ["Docker", "Development"],
      "default": "Development",
      "description": "Environment to execute"
    }
  ]
}
