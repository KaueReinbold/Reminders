@model Reminders.Domain.Models.ReminderModel

@{
    ViewData["Title"] = "Cadastrar Lembrete";
}
<h2>@ViewData["Title"]</h2>
<fieldset class="form-group row">
    <form asp-action="Create" class="col-lg-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="title" class=""></label>
            <input asp-for="title" type="text" class="form-control" placeholder="Digite o título do lembrete..." maxlength="150" />
            <span asp-validation-for="title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="description" class=""></label>
            <textarea asp-for="description" class="form-control" rows="5" placeholder="Digite detalhes adicionais do lembrete..." maxlength="500"></textarea>
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="limit_date" class=""></label>
            <input asp-for="limit_date" class="form-control" required />
            <span asp-validation-for="limit_date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="is_done" />
            <label asp-for="is_done"></label>
        </div>
        <div class="form-group">
            <div class="">
                <a asp-action="" class="btn btn-default">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </div>
    </form>
</fieldset>