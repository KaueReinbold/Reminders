@{
    var status = (TempData["StatusMessageStatus"] != null) ? (int)TempData["StatusMessageStatus"] : -1;
    var message = TempData["StatusMessage"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <link rel="shortcut icon" href="~/images/contract.png" type="image/x-icon" />
    @*@Html.ApplicationInsightsJavaScript(TelemetryConfiguration)*@
</head>
<body>

    <div id="messageNotification" class="alert-message">
        <div role="alert">
        </div>
    </div>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a asp-area="" asp-controller="Reminder" asp-action="" class="navbar-brand title-reminder-navbar">
                    <img class="imgReminder" src="~/images/contract_2.png" alt="Reminders" />
                    Lembretes
                </a>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - Lembretes</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/events/button-reminders.events.js" asp-append-version="true"></script>
        <script src="~/js/events/grid-reminders.events.js" asp-append-version="true"></script>
        <script src="~/js/events/input-reminders.events.js" asp-append-version="true"></script>
        <script src="~/js/util/prototype.service.js" asp-append-version="true"></script>
        <script src="~/js/util/notification.service.js" asp-append-version="true"></script>
        <script src="~/js/util/events.service.js" asp-append-version="true"></script>
        <script src="~/js/service/reminders.service.js" asp-append-version="true"></script>
        <script src="~/js/repository/reminders.repository.js" asp-append-version="true"></script>
        <script src="~/js/request/request.js" asp-append-version="true"></script>
        <script src="~/js/remiders.app.js" asp-append-version="true"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>